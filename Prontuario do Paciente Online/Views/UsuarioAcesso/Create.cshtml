@using Prontuario_do_Paciente_Online.Models.Enums;

@model Prontuario_do_Paciente_Online.ViewModels.UsuarioAcessoViewModel;
@{
    ViewData["Title"] = "Cadastro de Usuário Interno";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .field-validation-error {
        font-size: 11px;
    }
</style>

<html>
    <body>
        <main class="main-content mt-4">
            <div class="card p-4">
                <div class="tittle-text m-4">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="container-fluid">
                    <table class="table align-items-center mb0">
                        <form asp-action="Create" method="POST">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Usuario" class="form-control-label"></label>
                                        <input asp-for="Usuario" class="form-control" placeholder="Digite o nome de usuário" required>
                                        <span asp-validation-for="Usuario" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" class="form-control-label"></label>
                                        <input asp-for="Email" class="form-control" placeholder="exemplo@exemplo.com" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="SenhaAcesso" class="form-control-label"></label>
                                        <input type="password" asp-for="SenhaAcesso" class="form-control" placeholder="Digite o senha de acesso" required>
                                        <span asp-validation-for="SenhaAcesso" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="TipoAcesso" class="form-control-label"></label>
                                        <select class="form-control" name="TipoAcesso" required>
                                            <option value="" disabled selected>Selecione o tipo de acesso </option>
                                            <option value="@EnumTipoAcesso.Administrativo">Administrativo</option>
                                            <option value="@EnumTipoAcesso.Tecnologia">Tecnologia</option>
                                            <option value="@EnumTipoAcesso.Medico"> Médico</option>
                                        </select>
                                        <span asp-validation-for="TipoAcesso" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button type="button" class="btn bg-gradient-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Salvar</button>
                                <a href="@Url.Action("Index", "Home")" class="btn bg-gradient-secondary">Cancelar</a>
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Confirmação!</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <h4>Deseja concluir o cadastro?</h4>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Fechar</button>
                                                <button type="submit" class="btn bg-gradient-primary">Salvar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </table>
                </div>
            </div>
        </main>
   
    </body>
</html>