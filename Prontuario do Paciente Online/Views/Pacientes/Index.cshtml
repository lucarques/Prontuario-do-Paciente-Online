@model IEnumerable<Prontuario_do_Paciente_Online.Models.Paciente>
@{
    ViewData["Title"] = "Pacientes Cadastrados";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    bool cadastroSucesso = TempData["CadastroSucesso"] as bool? ?? false;
}

<body>
    <div class="main-content mt-4">
        <div class="card p-4">
            <div class="title-text m-4">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nome</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Idade</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Motivo da Internacao</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Data da Internacao</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="my-auto">
                                        <h3 class="mb-0 text-xs"> @item.Id</h3>
                                    </td>
                                    <td class="my-auto">
                                        <h3 class="mb-0 text-xs"> @item.Nome</h3>
                                    </td>
                                    <td class="my-auto">
                                        <h3 class="mb-0 text-xs"> @item.Idade</h3>
                                    </td>
                                    <td class="my-auto">
                                        <h3 class="mb-0 text-xs"> @item.MotivoInternacao</h3>
                                    </td>
                                    <td class="my-auto">
                                        <h3 class="mb-0 text-xs"> @item.DataInternacao</h3>
                                    </td>
                                    <td>
                                       <div class="col-md-4 mt-3">
                                       <a asp-controller="pacientes" asp-action="details" asp-route-id="@item.Id" class="btn btn-default btn-sm">Detalhes</a>
                                       </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="successModalLabel">Sucesso!</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Cadastrado com sucesso.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <p>Não existe dados para serem exibidos</p>
                }
            </div>
        </div>
    </div>
</body>

@if (cadastroSucesso)
{
    <script>
        $(document).ready(function () {
            $('#successModal').modal('show');
        });
    </script>
}



