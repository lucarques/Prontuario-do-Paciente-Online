@model List<Prontuario_do_Paciente_Online.Models.Paciente>
@{
    ViewData["Title"] = "Prontuário do paciente";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="./lib/bootstrap/dist/js/bootstrap.js"></script>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

    </style>
</head>

<body>
    <h4>@ViewData["Title"]</h4>
    <div class="container">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="dataConsulta" class="form-label">Inserir/ Consultar prontuário por data:</label>
                    <input type="date" class="form-control" id="dataConsulta">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="nomePaciente" class="form-label">Filtrar por Paciente:</label>
                    <input type="text" class="form-control" id="nomePaciente" placeholder="Digite o nome do paciente">
                </div>
                <div class="col-md-2 mb-3 align-self-end">
                    <button class="btn btn-default btn-sm" onclick="aplicarFiltros()">Filtrar</button>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>Data da internação</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="my-auto">
                            <h3 class="mb-0 text-xs"> @item.Id</h3>
                        </td>
                        <td class="my-auto">
                            <h3 class="mb-0 text-xs"> @item.Nome</h3>
                        </td>
                        <td class="my-auto">
                            <h3 class="mb-0 text-xs"> @item.Idade</h3>
                        </td>
                        <td class="my-auto">
                            <h3 class="mb-0 text-xs"> @item.DataInternacao</h3>
                        </td>
                        <td>
                            <a data-id="@item.Id" class="btn-inserir-prontuario btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#modalInserirProntuario">Adicionar</a>
                            <a class="btn btn-default btn-sm disabled">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não existem dados para serem exibidos nesta data</p>
    }

    <div id="_AdicionarProntuarioPaciente"></div>

    <script>
        document.querySelectorAll(".btn-inserir-prontuario").forEach(function (button) {
            button.addEventListener("click", function () {
                var pacienteId = this.getAttribute("data-id");

                $.ajax({
                    url: "/prontuario/AdicionarProntuario?id=" + pacienteId,
                    method: "GET",
                    success: function (data) {
                        $("#_AdicionarProntuarioPaciente").html(data);
                        $("#modalInserirProntuario").modal('show');
                    },
                    error: function () {
                        alert("Ocorreu um erro ao buscar os dados da consulta.");
                    }
                });
            });
        });
    </script>
</body>
</html>
